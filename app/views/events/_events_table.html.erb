<h3>Upcoming Events</h3>
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Location</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>    
    <% @upcoming_events.each do |e| %>
      <tr>
        <td><%= e.description %></td>
        <td><%= e.location %></td>
        <td><%= e.date %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

<br><br>
<h3>Previous Events</h3>
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Location</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>    
    <% @prev_events.each do |e| %>
      <tr>
        <td><%= e.description %></td>
        <td><%= e.location %></td>
        <td><%= e.date %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

