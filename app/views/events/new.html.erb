<h2>Create a New Event</h2>

<div>
  <%= form_for @event do |f| %>
    <%= f.label :description, 'Describe the event' %><br>
    <%= f.text_area :description %><br><br>

    <%= f.label :location %><br>
    <%= f.text_field :location %><br><br>

    <%= f.label :date %><br>
    <%= f.date_field :date %><br><br>

    <%= f.label :attendees, 'Select the users to invite to the event' %><br>
    <% User.select{ |x| x.id != current_user.id }.each do |user| %>
      <%= check_box_tag "user_ids[]", user.id %>
      <%= user.username %><br>
    <% end %>

    <br>

    <%= f.submit 'Create!' %>
  <% end %>
</div>

