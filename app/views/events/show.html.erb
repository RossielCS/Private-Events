<br>
<div class="container">
  <h2 class="text-center">Your Events</h2>
  <div class="row">
    <div class="col">
      <h3></h3>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Description</th>
            <th>Location</th>
            <th>Date</th>
            <th>Attendees</th>
          </tr>
        </thead>

        <tbody>    
          <% @event.each do |e| %>
            <tr>
              <td><%= e.description %></td>
              <td><%= e.location %></td>
              <td><%= e.date %></td>
              <% e.event_attendees.each do |a| %>
                <td><%= a.username %></td>
              <% end %> 
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
